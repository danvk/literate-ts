{
  "name": "literate-ts",
  "version": "2.4.0",
  "description": "Code samples that scale",
  "exports": "./dist/index.js",
  "type": "module",
  "repository": "https://github.com/danvk/literate-ts.git",
  "author": "Dan Vanderkam <danvdk@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "check:asciidoc": "node --loader=ts-node/esm --no-warnings index.ts examples/asciidoc/sample.asciidoc",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "lint": "eslint 'src/**/*.ts'",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest --testPathIgnorePatterns 'dist|e2e'",
    "baselines:check": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern e2e",
    "baselines:update": "NODE_OPTIONS=--experimental-vm-modules UPDATE_MODE=true jest --testPathPattern e2e"
  },
  "bin": {
    "literate-ts": "./bin/literate-ts.js"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "fast-glob": "^3.3.1",
    "fast-json-stable-stringify": "^2.1.0",
    "find-cache-dir": "^5.0.0",
    "fs-extra": "^11.0.0",
    "html-to-text": "^9.0.5",
    "js-yaml": "^4.1.0",
    "jsonc-parser": "^3.2.0",
    "lodash": "^4.17.15",
    "ora": "^8.0.0",
    "read-pkg-up": "^11.0.0",
    "tmp": "^0.2.0",
    "yargs": "^17.0.0"
  },
  "peerDependencies": {
    "typescript": ">4.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/find-cache-dir": "^5.0.0",
    "@types/fs-extra": "^11.0.0",
    "@types/html-to-text": "^9.0.1",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.14.138",
    "@types/node": "20.12.8",
    "@types/ora": "^3.2.0",
    "@types/tmp": "^0.2.0",
    "@types/yargs": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.46.0",
    "jest": "^29.6.2",
    "knip": "^5.7.3",
    "nyc": "^15.1.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.4.2"
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "jsxBracketSameLine": true
  }
}
