{
  "$schema": "http://json.schemastore.org/prettierrc",
  "overrides": [
    {"files": ".*rc", "options": {"parser": "json"}},
    {"files": ".nvmrc", "options": {"parser": "yaml"}}
  ],
  "plugins": ["prettier-plugin-packagejson"],
  "arrowParens": "avoid",
  "printWidth": 100,
  "singleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": false
}
